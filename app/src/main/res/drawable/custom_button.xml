<ripple
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="@color/icons"> <!-- This is the color of Ripple-->

        <!-- Note: <ripple> acts like a layer-list -->
        <item android:id="@android:id/mask">
            <shape android:shape="rectangle">
                <corners android:radius="3dp"/>
                <!-- This color is not displayed in any way -->
                <solid android:color="@android:color/black" />
            </shape>
        </item>

        <!-- This is the border -->
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="3dp"/>
                <solid android:color="@color/accent" />

                <!-- Use your border color in place of #f00
                <stroke android:width="1dp" android:color="@color/icons"/> -->
            </shape>
        </item>
    </ripple>


